@{
    @using Microsoft.AspNetCore.Identity
    @using Tweet10.Areas.Identity.Data
    @inject SignInManager<User> SignInManager

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tweet10</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tweet10.styles.css" asp-append-version="true" />
</head>
<body class="mh-100 mb-0 pb-0 overflow-hidden ">
    <div class="container d-flex flex-column flex-md-row">
        <header class=vh-100>
            @if (SignInManager.IsSignedIn(User))
            {
                <partial name="_AuthorizedNavigation" />

            }
            else
            {
                <partial name="_GuestNavigation" />
            }
        </header>
        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
